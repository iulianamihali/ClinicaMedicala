<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="creareProgramare" prefHeight="500.0" prefWidth="750.0" stylesheets="@../css/creareProgramare.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CreareProgramareController">
   <children>
      <ImageView fitHeight="177.0" fitWidth="168.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/programare.png" />
         </image>
      </ImageView>
      <Label layoutX="223.0" layoutY="42.0" text="Completează Cererea De Programare">
         <font>
            <Font name="Times New Roman Bold" size="24.0" />
         </font>
      </Label>
      <DatePicker fx:id="data" layoutX="223.0" layoutY="111.0" onAction="#alegeData" prefHeight="44.0" prefWidth="198.0" promptText="Alege Data" />
      <ComboBox fx:id="oreDisponibile" layoutX="223.0" layoutY="182.0" prefHeight="44.0" prefWidth="198.0" promptText="Orele disponibile" />
      <TextArea fx:id="descriere" layoutX="230.0" layoutY="250.0" prefHeight="74.0" prefWidth="198.0" promptText="Scurta Descriere (optional)" />
      <Button fx:id="butonProgramare" layoutX="349.0" layoutY="406.0" mnemonicParsing="false" onAction="#clickProgrameaza" prefHeight="34.0" prefWidth="134.0" text="Programează-te">
         <font>
            <Font name="Times New Roman Bold" size="16.0" />
         </font></Button>
      <Label fx:id="locatie" layoutX="313.0" layoutY="352.0" text="Timisoara">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Label>
      <Label layoutX="230.0" layoutY="352.0" text="Locatie:">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Label>
      <Button fx:id="butonAnulare" layoutX="204.0" layoutY="406.0" mnemonicParsing="false" onAction="#clickAnulare" prefHeight="34.0" prefWidth="133.0" text="Anulare">
         <font>
            <Font name="Times New Roman Bold" size="17.0" />
         </font></Button>
      <ImageView fitHeight="129.0" fitWidth="262.0" layoutX="566.0" layoutY="359.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/creareProgrImg2.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
